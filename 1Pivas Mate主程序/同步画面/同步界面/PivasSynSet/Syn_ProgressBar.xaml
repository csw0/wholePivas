<UserControl x:Name="Syn_Bar" x:Class="PivasSynSet.Syn_ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="502" d:DesignWidth="20" Width="502" Height="20">
    <ProgressBar x:Name="progressbar" Maximum="500" Background="#FFFDFDFD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="502" Height="20" BorderBrush="#FF99B4D1">
        <ProgressBar.Foreground>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF9DD0FB" Offset="1"/>
                <GradientStop Color="#FF03429E"/>
            </LinearGradientBrush>
        </ProgressBar.Foreground>
    </ProgressBar>
</UserControl>
