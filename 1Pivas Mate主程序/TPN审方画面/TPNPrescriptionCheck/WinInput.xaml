<Window x:Class="TPNReview.WinInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入" Height="120" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        TextOptions.TextFormattingMode="Display">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    </Window.Background>
    <StackPanel>
        <TextBlock x:Name="txtTip" Text="请输入" Margin="8"  />
        <TextBox x:Name="txtInput" Height="23" Margin="8,0" TextWrapping="Wrap" MaxLength="250" MaxLines="1"/>
        <Button Content="确定" Click="OK_Click" Width="64" Height="23" Margin="8" />

    </StackPanel>
</Window>
