<Window x:Class="TPNReview.WinCustodyObj"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="增加检查监护项目" Height="200" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="40">
            <TextBlock Text="检查项目:" VerticalAlignment="Center" TextAlignment="Right" Margin="6,0" Width="60" />
            <ComboBox x:Name="cbbChkItem" VerticalAlignment="Center" Width="180" SelectionChanged="cbbChkItem_SelectionChanged" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="40">
            <TextBlock Text="检查值:" VerticalAlignment="Center" TextAlignment="Right" Margin="6,0" Width="60" />
            <TextBox x:Name="txtChkValue" VerticalAlignment="Center" Width="120" Height="22" />
            <TextBlock x:Name="txtUnit" Margin="4,0" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="40">
            <TextBlock Text="日期:" VerticalAlignment="Center" TextAlignment="Right" Margin="6,0" Width="60" />
            <DatePicker x:Name="dpValDate" VerticalAlignment="Center" Width="120" />
        </StackPanel>
        <Grid>
            <Button Content="确定" Height="23" Width="60" Margin="8" Click="btnOK_Click" />
        </Grid>
    </StackPanel>
</Window>
