<Window x:Class="TPNReview.WinCustomCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="自定义审方" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Text="审核内容:" Margin="6, 4" />
        <TextBox x:Name="txtDesc" TextWrapping="Wrap" Height="190" Margin="6,0" />
        <StackPanel Height="26" Orientation="Horizontal">
            <TextBlock Text="结果星级:" Margin="4,0" VerticalAlignment="Center" />
            <RadioButton Grid.Row="0" x:Name="rdo3Degress" Content="3星" VerticalAlignment="Center" IsChecked="True" Margin="20,0"/>
            <RadioButton Grid.Row="0" x:Name="rdo5Degress" Content="5星" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right">
            <Button Content="确定" Click="Save_Click" Width="60" Height="23" Margin="6,0" />
        </StackPanel>
    </StackPanel>
</Window>
