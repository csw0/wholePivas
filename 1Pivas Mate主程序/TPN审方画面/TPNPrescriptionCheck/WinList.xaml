<Window x:Class="TPNReview.WinList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListWindow" Height="300" Width="200" WindowStartupLocation="CenterOwner" WindowStyle="None" Deactivated="Window_Deactivated" Closed="Window_Closed">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    </Window.Background>
    <Grid>
        <ListBox x:Name="lbList" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                 MouseDoubleClick="lbList_MouseDoubleClick" />
        <Button x:Name="btnClose" Content="关闭" Width="40" Height="21" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Margin="4" Click="btnClose_Click" Visibility="Collapsed" />
    </Grid>
</Window>
