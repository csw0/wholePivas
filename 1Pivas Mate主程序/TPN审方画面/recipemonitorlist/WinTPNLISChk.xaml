<Window x:Class="recipemonitorlist.WinTPNLISChk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="营养检查项目" Height="500" Width="700" Loaded="Window_Loaded" 
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8"> 
        <DataGrid x:Name="grdPNLISChk" BorderThickness="0" GridLinesVisibility="None"
                  CanUserAddRows="False" IsReadOnly="True" ColumnWidth="60" FrozenColumnCount="1" 
                  RowHeaderWidth="0" >
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Height" Value="24" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
