<UserControl x:Class="ShowMovie.ShowMV"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShowMovie"
             mc:Ignorable="d" 
             d:DesignHeight="360" Width="640" HorizontalAlignment="Left" VerticalAlignment="Top" Height="360">
    <Border x:Name="Bor1" BorderBrush="Wheat" BorderThickness="1" CornerRadius="10" Margin="0" Loaded="Bor1_Loaded" SnapsToDevicePixels="True" ClipToBounds="True" Background="Black" MouseRightButtonDown="Bor1_MouseRightButtonDown">
        <MediaElement x:Name="mediaElement" MediaEnded="mediaElement_MediaEnded" MouseLeftButtonDown="mediaElement_MouseLeftButtonDown" Margin="2"/>
    </Border>
</UserControl>